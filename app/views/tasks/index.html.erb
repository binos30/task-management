<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<div class="d-flex justify-content-between">
  <h2>Tasks</h2>
  <div><%= link_to "New Task", new_task_path, class: "btn btn-primary btn-sm" %></div>
</div>

<div id="tasks" class="row row-cols-1 row-cols-md-3 g-4 mb-3">
  <% if @tasks.any? %>
    <%= render @tasks %>
  <% else %>
    <div class="text-center w-100">
      <h4 class="mt-3">No tasks found.</h4>
    </div>
  <% end %>
</div>
