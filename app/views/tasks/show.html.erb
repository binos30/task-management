<p style="color: green"><%= notice %></p>

<%= render @task %>

<div class="mt-3">
  <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-primary" %>
  <%= link_to "Back to tasks", tasks_path, class: "btn btn-secondary" %>
  <%= button_to "Destroy this task", @task, method: :delete, class: "btn btn-danger mt-2",
    data: { turbo_confirm: "Are you sure you want to delete this task?" } %>
</div>
